{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es6",
		"lib": ["dom", "ES2020"],
		// "composite": true,
		// "noUnusedParameters": true,
		"incremental": true,
		"noEmit": false,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": false,
		"sourceMap": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["react", "node", "jest"],
		"paths": {
			"@backpackerz/core/*": ["../../../packages/backpackerz-core/src/*"],
			"@backpackerz/components/*": [
				"../../../packages/backpackerz-components/src/*"
			],
			"@backpackerz/datepicker/*": [
				"../../../packages/backpackerz-datepicker/src/*"
			],
			"@backpackerz/core": ["../../../packages/backpackerz-core/src"],
			"@backpackerz/components": [
				"../../../packages/backpackerz-components/src"
			],
			"@backpackerz/datepicker": [
				"../../../packages/backpackerz-datepicker/src"
			]
		}
	},
	"typeRoots": ["node_modules/@types"],
	"exclude": ["node_modules"],
	"include": ["@types/*"]
}
