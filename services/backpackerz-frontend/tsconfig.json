{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"allowJs": true,
		"jsx": "preserve",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"experimentalDecorators": true,
		"outDir": "../../build/"
	},
	"exclude": [
		"node_modules",
		"next.config.js",
		"jest.config.js",
		".next",
		"**/*.stories.tsx",
		"build"
	],
	"include": ["next-env.d.ts", "src/types.d.ts", "**/*.ts", "**/*.tsx"]
}
