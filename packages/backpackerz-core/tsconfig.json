{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"allowJs": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"outDir": "./dist/"
	},
	"exclude": ["node_modules", "next.config.js", ".next", "coverage", "dist"],
	"include": ["src/**/*.ts"]
}
