{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"allowJs": true,
		"jsx": "preserve",
		"lib": ["dom", "ES2020"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"paths": {
			"@core/*": ["../../backpackerz-core/src/*"],
			"@app/*": ["../../backpackerz-backend/src/*"]
		}
	},
	"exclude": ["node_modules", "next.config.js", ".next", "coverage", "dist"],
	"include": ["src/**/*.ts"]
}
