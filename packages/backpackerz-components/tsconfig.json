{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"allowJs": true,
		"jsx": "preserve",
		"lib": ["dom", "ES2020"],
		"module": "esnext",
		"target": "esnext",
		"strict": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"experimentalDecorators": true,
		"paths": {
			"@components/*": ["./*"]
		}
	},
	"exclude": ["node_modules", "coverage", "dist"],
	"include": ["./**/*.tsx", "./**/*.ts"]
}
